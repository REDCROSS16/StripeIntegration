{% extends 'base.html.twig' %}

{% block title %} Register {% endblock %}

{% block content %}

<div class="container content-end">
    <div class="col-md-8 offset-md-5 pt-5">

        <h2>Register form</h2>
        <div class="col-md-6">
            {{ form_start(register_form) }}
            <div class="form-errors">
                {{ form_errors(register_form) }}
            </div>

            <div class="row">
                <div class="col"> {{ form_label(register_form.firstName) }}</div>
                <div class="col"> {{ form_widget(register_form.firstName) }} </div>
            </div>
            <div class="row">
                <div class="col"> {{ form_label(register_form.lastName) }}</div>
                <div class="col"> {{ form_widget(register_form.lastName) }}</div>
            </div>
            <div class="row">
                <div class="col"> {{ form_label(register_form.phone) }}</div>
                <div class="col"> {{ form_widget(register_form.phone) }}</div>
            </div>
            <div class="row">
                <div class="col"> {{ form_label(register_form.email) }}</div>
                <div class="col"> {{ form_widget(register_form.email) }}</div>
            </div>
            <div class="row">
                <div class="col"> {{ form_label(register_form.password) }}</div>
                <div class="col"> {{ form_widget(register_form.password) }}</div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            {{ form_end(register_form) }}
        </div>
    </div>
{% endblock %}
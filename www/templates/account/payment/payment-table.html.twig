<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Invoice</th>
        <th scope="col">Status</th>
        <th scope="col">Description</th>
    </tr>
    </thead>
    <tbody>
    {% for payment in payments %}
        <tr>
            <th scope="row">{{ loop.index }}</th>
            <td>{{ payment.invoice.id }}</td>
            <td>{{ payment.status }}</td>
            <td>{{ payment.description }}</td>
        </tr>
    {% endfor %}

    </tbody>
</table>